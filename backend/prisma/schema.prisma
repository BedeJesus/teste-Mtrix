generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  events   Event[] @relation("UserEvents")
}

model Event {
  id        String   @id @default(uuid())
  name      String
  startDate DateTime
  endDate   DateTime
  users     User[]   @relation("UserEvents")
}
